const hola = 'Hola';
    const num1 = '7';
    const num2 = '13';
    const adios = 'Adiós';
    var num1L = parseInt("hola",32);
    var num2L  = parseInt("adios",32);

    alert('\'hola que tal\'');
    alert(hola, '\n' , adios);
    alert("La suma de "+num1+"+"+num2+" es: "+num1+num2);
    alert("La suma de las variables es: "+(num1L+num2L+num1+num2));